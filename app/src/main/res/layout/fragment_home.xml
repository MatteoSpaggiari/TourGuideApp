<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/FragmentHome" >

        <ImageView
            android:id="@+id/image_mantua"
            android:src="@drawable/mantova_three_lakes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/FragmentHome.ImageView" />

        <TextView
            android:id="@+id/text_home"
            android:text="@string/text_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_mantua"
            style="@style/FragmentHome.TextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>